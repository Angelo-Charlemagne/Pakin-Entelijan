//Ce sketch permet d'allumer le LED rouge si le véhicule s'approche du capteur à moins de 4 cm
//et d'allumer le LED vert si le véhicule s'éloigne du capteur de plus de 4 cm
#include "SR04.h"
#define TRIG_PIN 12
#define ECHO_PIN 11
SR04 sr04 = SR04(ECHO_PIN,TRIG_PIN);
long distancevehicule;

//Definition des pins
#define VERT 2
#define ROUGE 3

void setup() {
   Serial.begin(9600);
   delay(1000);
   
   pinMode(VERT,OUTPUT);
   pinMode(ROUGE,OUTPUT);
}

void loop() {
   distancevehicule=sr04.Distance();
   Serial.print(a);
   Serial.println("cm");
   delay(1000);
   
   if(distancevehicule<4){
    digitalWrite(ROUGE,HIGH);
   else
    digitalWrite(ROUGE,HIGH);
    }
}
